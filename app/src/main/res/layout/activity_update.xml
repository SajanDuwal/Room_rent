<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarUpdateTenants"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#AA000000"
            android:theme="@style/AppTheme.ToolbarTheme"
            app:subtitle="Update"
            app:subtitleTextColor="@android:color/holo_orange_light"
            app:title="Easy Landlord"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/updatedNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tvUpdateMemberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:text="Update Personal Info"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintEnd_toStartOf="@+id/ivUpdatedTenantImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etUpdateLayoutName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateMemberInfo"
                app:layout_constraintTop_toBottomOf="@+id/ivUpdatedTenantImage">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etUpdatedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:hint="Updated Name"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/ivUpdatedTenantImage"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUpdateMemberInfo"
                app:srcCompat="@drawable/user_image" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etUpdateLayoutAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateMemberInfo"
                app:layout_constraintTop_toBottomOf="@+id/etUpdateLayoutName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etUpdatedAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:hint="Updated Address"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etUpdateLayoutContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateMemberInfo"
                app:layout_constraintTop_toBottomOf="@+id/etUpdateLayoutAddress">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etUpdatedContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:hint="Updated Contact"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tvUpdateRoomBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:text="Update Room Booking"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintEnd_toStartOf="@+id/ivUpdatedTenantImage"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateMemberInfo"
                app:layout_constraintTop_toBottomOf="@+id/etUpdateLayoutContact" />

            <LinearLayout
                android:id="@+id/layoutUpdateLayoutRoomId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateRoomBooking"
                app:layout_constraintTop_toBottomOf="@+id/tvUpdateRoomBooking">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbRoomIdUpdatePermission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etUpdatedRoomId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="13"
                            android:enabled="false"
                            android:hint="Updated RoomID"
                            android:imeOptions="flagNoFullscreen"
                            android:inputType="number"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUpdateExistedRoomId"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_green_dark"
                    android:visibility="gone" />

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/etUpdateLayoutRoomCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateRoomBooking"
                app:layout_constraintTop_toBottomOf="@+id/layoutUpdateLayoutRoomId">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etUpdatedRoomCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:hint="Updated Room Charge"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etUpdateLayoutElectricityInitialUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvUpdateRoomBooking"
                app:layout_constraintTop_toBottomOf="@+id/etUpdateLayoutRoomCharge">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etUpdatedElectricityInitialUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:hint="Updated Electricity current unit(s)"
                    android:imeOptions="flagNoFullscreen"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout_Update_Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:gravity="center|start"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/tvRoomBooking"
                app:layout_constraintTop_toBottomOf="@+id/etUpdateLayoutElectricityInitialUnit">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/string_room_paid_up_to"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/holo_orange_light" />

                <Spinner
                    android:id="@+id/updateSpinnerMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_button"
                android:text="Update"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_Update_Spinner" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>